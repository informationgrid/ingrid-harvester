{
  "appenders": {
    "console": {
      "type": "console",
      "layout": {
        "type": "json"
      },
      "enableCallstack": true
    },
    "appLog": {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 10485760,
      "backups": 5
    },
    "summaryFile": {
      "type": "file",
      "filename": "logs/summary.log",
      "maxLogSize": 10485760,
      "backups": 3
    },
    "harvesterLogs": {
      "type": "multiFile",
      "base": "logs/harvester/",
      "property": "harvester",
      "extension": ".log",
      "maxLogSize": 10485760,
      "backups": 3,
      "layout": { "type": "pattern", "pattern": "[%d] [%p] harvester ID %X{harvester} - %m - %c" }
    }
  },
  "categories": {
    "default": {
      "appenders": [ "console", "appLog", "harvesterLogs" ],
      "level": "INFO"
    },
    "summary": {
      "appenders": [ "console", "summaryFile", "appLog" ],
      "level": "INFO"
    },
    "requests": {
      "appenders": [ "console", "appLog" ],
      "level": "INFO"
    }
  }
}
