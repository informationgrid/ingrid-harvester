{
  "appenders": {
    "console": {
      "type": "console"
    },
    "lastLog": {
      "type": "file",
      "filename": "logs/last-execution.log"
    },
    "summaryFile": {
      "type": "file",
      "filename": "logs/summary.log",
      "maxLogSize": 10485760,
      "backups": 3
    }
  },
  "categories": {
    "default": {
      "appenders": [ "console", "lastLog" ],
      "level": "DEBUG"
    },
    "summary": {
      "appenders": [ "console", "summaryFile", "lastLog" ],
      "level": "INFO"
    },
    "requests": {
      "appenders": [ "console", "lastLog" ],
      "level": "INFO"
    }
  }
}
