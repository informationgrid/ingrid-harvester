{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2016"],
    "noImplicitAny": false,
    "strict": false,
    "sourceMap": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true
  },
  "include": [
    "./server/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
