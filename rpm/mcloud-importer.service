[Unit]
Description=InGrid mCLOUD-Importer Service
After=network.target

[Service]
Environment=NODE_ENV=production
User=ingrid
WorkingDirectory=/opt/ingrid/mcloud-importer
ExecStart=pm2 start ./server/app/index.js
ExecStop=pm2 delete ./server/app/index.js
ExecReload=pm2 restart ./server/app/index.js
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
