{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "tslib": [
        "node_modules/tslib"
      ]
    },
    "useDefineForClassFields": false
  }
}
